<div class="d-flex justify-content-center p-5">
  <form class="login-form">
    <div class="mb-3">
      <label for="email-login" class="form-label text-white">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email-login"
        aria-describedby="emailHelp"
      />
      <div id="emailHelp" class="form-text text-white">We'll never share your email with
        anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="inputPassword" class="form-label text-white">Password</label>
      <input type="password" class="form-control" id="password-login" />
    </div>
    <button type="submit" class="btn btn-success text-white">Login</button>
  </form>
</div>

<div class="d-flex justify-content-center p-5">
  <form class="signup-form">
    <div class="mb-3">
      <label for="username-signup" class="form-label text-white">username</label>
      <input type="username" class="form-control" id="username-signup" />
    </div>
    <div class="mb-3">
      <label for="email-signup" class="form-label text-white">email</label>
      <input
        type="email"
        class="form-control"
        id="email-signup"
        aria-describedby="emailHelp"
      />
    <div class="mb-3">
      <label for="password-signup" class="form-label text-white">password</label>
      <input type="password" class="form-control" id="password-signup" />
    </div>
    <button type="submit" class="btn btn-success">Sign Up</button>
  </form>
</div>

<script src="/javascript/login.js"></script>