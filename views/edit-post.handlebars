<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <div class="mt-5">
    <h2>
      Edit Post
    </h2>
    <form class="edit-post-form">
      <div class="mt-3">
        <p>Title</p>
        <input name="post-title" type="text" value="{{post.title}}" />
      </div>
      <div class="mt-3">
        <p>Body</p>
        <input name="message" type="text" value ="{{post.message}}"/>
      </div>
      <div class="mt-3">
        by you on
        {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}}
          {{format_plural "comment" post.comments.length}}</a>
      </div>
      <button type="submit" class="mt-2 btn btn-outline-primary">Save post</button>
      <button type="button" class="mt-2 btn btn-outline-danger">Delete post</button>
    </form>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="mt-2 btn btn-outline-primary">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>