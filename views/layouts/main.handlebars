<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>The Tech Blog</title>
  </head>

  <body>
    <div class="navbar navbar-expand-lg bg-black">
      <div class="container">
        <a href="/" class="navbar-brand text-white">The Tech Blog</a>
      </div>
      {{#if loggedIn}}
      <div>
        <a href="/dashboard " class="nav-item text-white p-2">Dashboard</a>
        <a id="logout" type="button" class="nav-item text-white text-white p-2">Logout</a>
      {{else}}
        <a href="/login" class="nav-item text-white">Login</a>
      {{/if}}
      </div>
    </div>
    <main class="bg-black text-white justify-content-center p-5">
      {{{body}}}
      <footer class="d-flex justify-content-center footer bg-black text-white">
      Thanks for visiting!
    </footer>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>

</html>